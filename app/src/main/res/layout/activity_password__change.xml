<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cloudclient.clients.Password_Change">

    <TextView
        android:id="@+id/textView19"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="輸入舊密碼"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="42dp"
        android:layout_marginTop="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />


    <TextView
        android:id="@+id/textView22"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新密碼"
        tools:layout_editor_absoluteY="104dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/textView19"
        android:layout_alignLeft="@+id/textView19"
        android:layout_alignStart="@+id/textView19" />

    <TextView
        android:id="@+id/textView23"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新密碼確認"
        tools:layout_editor_absoluteY="162dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/textView22"
        android:layout_alignLeft="@+id/textView22"
        android:layout_alignStart="@+id/textView22" />

    <EditText
        android:id="@+id/password_change_oldps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/password_change_newps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password_change_oldps"
        android:layout_alignStart="@+id/password_change_oldps"
        android:layout_below="@+id/password_change_oldps"
        android:layout_marginTop="49dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/password_change_newps_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password_change_newps"
        android:layout_alignStart="@+id/password_change_newps"
        android:layout_below="@+id/password_change_newps"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/password_change_OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_change_newps_confirm"
        android:layout_marginTop="80dp"
        android:layout_toLeftOf="@+id/password_change_newps_confirm"
        android:layout_toStartOf="@+id/password_change_newps_confirm"
        android:text="確定" />

    <Button
        android:id="@+id/password_change_Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/password_change_OK"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:layout_toEndOf="@+id/password_change_OK"
        android:layout_toRightOf="@+id/password_change_OK"
        android:text="取消" />
</RelativeLayout>
